<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>

	<settings>
		<!-- 
			mybatis 실행로그를 출력할 로깅 라이브러리를 지정한다.
			* slf4j 로그설정파일(logback.xml)에 로그출력레벨 설정하기
		 -->
		<setting name="logImpl" value="SLF4J"/> 
	</settings>

	<!-- 
		Mapper 파일에서 parameterType, resultType으로 자주 사용되는
		클래스들에 대한 별칭을 정의한다.
	 -->
	<typeAliases>
		<!-- 
			<package />
				지정된 패키지에 속한 클래스들에 대한 별칭을 일괄적으로 등록한다.
		 -->
		<package name="kr.co.jhta.hr.vo"/>
	</typeAliases>
	
</configuration>